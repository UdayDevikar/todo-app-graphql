# Ignore node_modules folders (both frontend and backend)
node_modules/
frontend/node_modules/
backend/node_modules/

# Ignore log files
logs/
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Ignore build output directories
frontend/build/
frontend/dist/
backend/dist/
backend/build/

# Ignore .env files (sensitive environment variables)
.env
frontend/.env
backend/.env

# Ignore coverage directory (for testing)
coverage/

# Ignore system files
.DS_Store
Thumbs.db

# Ignore lockfiles (optional, if you don't want to track lock files)
package-lock.json
yarn.lock

# Ignore IDE or editor settings (e.g., VSCode, Sublime, WebStorm)
.vscode/
.idea/
*.sublime-project
*.sublime-workspace

# Ignore any temporary or backup files
*.bak
*.tmp
*.swp
*.swo
